---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.tsx';
import GitHubProfile from '../components/GitHubProfile.tsx';
import Timeline from '../components/Timeline.tsx';
import FocusGrid from '../components/FocusGrid.tsx';
import HobbiesSection from '../components/HobbiesSection.tsx';
import SkillsGrid from '../components/SkillsGrid.tsx';
import ProductSpecializations from '../components/ProductSpecializations.tsx';
import ProjectsShowcase from '../components/ProjectsShowcase.tsx';
---

<Layout>
  <Header />
  <hr class="my-4" />
  
  <div class="mt-10">
    <div class="grid md:grid-cols-3">
      <div class="md:col-start-2">
        <GitHubProfile client:load />
      </div>
    </div>
  </div>
  
  <h2 class="text-3xl font-bold mt-10">Timeline</h2>
  <hr class="my-4" />
  <Timeline />
  
  <h2 class="text-3xl font-bold mt-10">Focus</h2>
  <hr class="my-4" />
  <FocusGrid />
  
  <h2 class="text-3xl font-bold mt-10">Hobbies & Interests</h2>
  <hr class="my-4" />
  <HobbiesSection />
  
  <h2 class="text-3xl font-bold mt-10">Skills</h2>
  <hr class="my-4" />
  <SkillsGrid />
  
  <h2 class="text-3xl font-bold mt-10">Product Specializations</h2>
  <hr class="my-4" />
  <ProductSpecializations />
  
  <h2 class="text-3xl font-bold mt-10">Professional Projects</h2>
  <hr class="my-4" />
  <ProjectsShowcase />
</Layout>
