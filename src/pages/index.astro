---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.tsx';
import Timeline from '../components/Timeline.tsx';
import FocusGrid from '../components/FocusGrid.tsx';
import HobbiesSection from '../components/HobbiesSection.tsx';
import SkillsGrid from '../components/SkillsGrid.tsx';
import ProductSpecializations from '../components/ProductSpecializations.tsx';
import ProjectsShowcase from '../components/ProjectsShowcase.tsx';
---

<Layout>
  <!-- Hero Section -->
  <section class="relative bg-white">
    <div class="container mx-auto px-4 py-8 pb-6 md:pb-8">
      <Header />
      <div class="absolute bottom-0 left-4 right-4 h-px bg-gradient-to-r from-transparent via-gray-300 to-transparent"></div>
    </div>
  </section>
  
  <!-- Skills Section -->
  <section class="py-12 md:py-16 bg-gray-50 border-t border-gray-100">
    <div class="container mx-auto">
      <div class="mb-12 px-4">
        <div class="flex items-center gap-4 mb-6">
          <div class="w-8 h-8 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-lg flex items-center justify-center shadow-lg">
            <i class="fas fa-code text-white text-sm"></i>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">Skills</h2>
        </div>
        <div class="h-px bg-gradient-to-r from-indigo-500 via-indigo-300 to-transparent w-32"></div>
      </div>
      <div class="px-4">
        <SkillsGrid />
      </div>
    </div>
  </section>
  
  <!-- Timeline Section -->
  <section class="py-16 bg-white border-t border-gray-100">
    <div class="container mx-auto">
      <div class="mb-12 px-4">
        <div class="flex items-center gap-4 mb-6">
          <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center shadow-lg">
            <i class="fas fa-clock text-white text-sm"></i>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">Timeline</h2>
        </div>
        <div class="h-px bg-gradient-to-r from-blue-500 via-blue-300 to-transparent w-32"></div>
      </div>
      <div class="px-4">
        <Timeline />
      </div>
    </div>
  </section>
  
  <!-- Projects Section -->
  <section class="py-16 bg-gray-50 border-t border-gray-100">
    <div class="container mx-auto">
      <div class="mb-12 px-4">
        <div class="flex items-center gap-4 mb-6">
          <div class="w-8 h-8 bg-gradient-to-br from-amber-500 to-amber-600 rounded-lg flex items-center justify-center shadow-lg">
            <i class="fas fa-briefcase text-white text-sm"></i>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">Professional Projects</h2>
        </div>
        <div class="h-px bg-gradient-to-r from-amber-500 via-amber-300 to-transparent w-32"></div>
      </div>
      <div class="px-4">
        <ProjectsShowcase />
      </div>
    </div>
  </section>
  
  <!-- Focus Section -->
  <section class="py-16 bg-white border-t border-gray-100">
    <div class="container mx-auto">
      <div class="mb-12 px-4">
        <div class="flex items-center gap-4 mb-6">
          <div class="w-8 h-8 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-lg flex items-center justify-center shadow-lg">
            <i class="fas fa-bullseye text-white text-sm"></i>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">Focus</h2>
        </div>
        <div class="h-px bg-gradient-to-r from-emerald-500 via-emerald-300 to-transparent w-32"></div>
      </div>
      <div class="px-4">
        <FocusGrid />
      </div>
    </div>
  </section>
  
  <!-- Product Specializations Section -->
  <section class="py-16 bg-gray-50 border-t border-gray-100">
    <div class="container mx-auto">
      <div class="mb-12 px-4">
        <div class="flex items-center gap-4 mb-6">
          <div class="w-8 h-8 bg-gradient-to-br from-orange-500 to-orange-600 rounded-lg flex items-center justify-center shadow-lg">
            <i class="fas fa-cogs text-white text-sm"></i>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">Product Specializations</h2>
        </div>
        <div class="h-px bg-gradient-to-r from-orange-500 via-orange-300 to-transparent w-32"></div>
      </div>
      <div class="px-4">
        <ProductSpecializations />
      </div>
    </div>
  </section>
  
  <!-- Hobbies Section -->
  <section class="py-16 bg-white border-t border-gray-100">
    <div class="container mx-auto">
      <div class="mb-12 px-4">
        <div class="flex items-center gap-4 mb-6">
          <div class="w-8 h-8 bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg flex items-center justify-center shadow-lg">
            <i class="fas fa-heart text-white text-sm"></i>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">Hobbies & Interests</h2>
        </div>
        <div class="h-px bg-gradient-to-r from-purple-500 via-purple-300 to-transparent w-32"></div>
      </div>
      <div class="px-4">
        <HobbiesSection />
      </div>
    </div>
  </section>
</Layout>
