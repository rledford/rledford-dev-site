---
import ListItem from './ListItem.astro';

interface HobbiesListProps {
  items: string[];
  color?: 'indigo' | 'blue' | 'red' | 'emerald' | 'orange' | 'purple' | 'amber';
}

const { items, color } = Astro.props as HobbiesListProps;
---

<ul class="space-y-3">
  {items.map((item) => (
    <ListItem color={color}>{item}</ListItem>
  ))}
</ul>
