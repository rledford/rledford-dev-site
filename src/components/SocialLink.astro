---
interface SocialLinkProps {
  href: string;
  icon: string;
  label?: string;
}

const { href, icon, label } = Astro.props as SocialLinkProps;
---

<a
  target="_blank"
  href={href}
  class="inline-flex items-center justify-center w-12 h-12 bg-white border border-gray-200 rounded-lg shadow-md hover:shadow-lg transition-all duration-300 hover:-translate-y-1 hover:border-blue-300 group"
  aria-label={label}
>
  <i
    class={`${icon} text-xl text-gray-600 group-hover:text-blue-600 transition-colors duration-300`}
  ></i>
</a>
